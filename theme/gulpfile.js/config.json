{
  "root": {
    "src": "./src",
    "dest": "./dist"
  },

  "tasks": {

    "static": {
      "src": "static",
      "dest": "./"
    },

    "css": {
      "src": "less",
      "dest": "css",
      "autoprefixer": {
        "browsers": [
          "Chrome >= 35",
          "Firefox >= 31",
          "Edge >= 12",
          "Explorer >= 9",
          "iOS >= 8",
          "Safari >= 8",
          "Android 2.3",
          "Android >= 4",
          "Opera >= 12"
        ]
      },
      "less": {
        "strictMath": true
      },
      "extensions": ["css", "less"]
    },

    "fonts": {
      "src": "icons",
      "dest": "css/fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    }

  }
}
